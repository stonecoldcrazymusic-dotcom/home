<!-- START: Stone Cold Crazy — Band image pair -->
<style>
  /* Scoped classes to avoid collisions with page styles */
  .scc-band-row {
    display: flex;
    gap: 40px;
    justify-content: center;
    align-items: flex-start;
    margin: 20px 0;
    font-family: Arial, Helvetica, sans-serif;
  }

  .scc-band-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 300px;               /* keeps block width consistent */
    text-decoration: none;
    color: inherit;
  }

  .scc-band-image {
    width: 300px;
    height: 200px;              /* fixed height so both images match */
    object-fit: cover;          /* crop larger images to fit box */
    display: block;
    filter: grayscale(100%);    /* greyscale by default */
    transition: filter 0.3s ease, transform 0.25s ease;
  }
  .scc-band-image:hover,
  .scc-band-block:focus-within .scc-band-image {
    filter: none;               /* color on hover / focus */
    transform: translateY(-2px);
  }

  .scc-band-title {
    margin-top: 8px;
    font-weight: 700;
    font-size: 1.1rem;
    text-align: center;
    line-height: 1.1;
  }

  .scc-band-subtitle {
    margin-top: 4px;
    font-variant: small-caps;
    font-size: 0.85rem;
    text-align: center;
    color: #333;
  }

  /* Make sure focus outline is visible for keyboard users */
  .scc-band-block:focus-within {
    outline: 3px solid rgba(0,0,0,0.08);
    border-radius: 4px;
  }

  /* Responsive: stack on small screens */
  @media (max-width: 680px) {
    .scc-band-row {
      flex-direction: column;
      gap: 18px;
      align-items: center;
    }
  }
</style>

